<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="20dp"
    android:paddingVertical="14dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgUserAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="1dp"
        app:shapeAppearanceOverlay="@style/CircleImageStyle"
        app:strokeColor="#333333"
        app:strokeWidth="1dp"
        android:background="#222222"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewOnlineStatus"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/shape_online_dot"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="@id/imgUserAvatar"
        app:layout_constraintEnd_toEndOf="@id/imgUserAvatar" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:text="Sarah Fitness"
        app:layout_constraintBottom_toTopOf="@+id/tvLastMessage"
        app:layout_constraintEnd_toStartOf="@+id/tvTime"
        app:layout_constraintStart_toEndOf="@+id/imgUserAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgUserAvatar"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#999999"
        android:textSize="14sp"
        tools:text="Did you hit your PR on squats today? ðŸ’ª"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserAvatar"
        app:layout_constraintEnd_toStartOf="@id/tvUnreadCount"
        app:layout_constraintStart_toStartOf="@+id/tvUserName"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B4F656"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="10:45 AM"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvUserName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvUnreadCount"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/shape_unread_badge"
        android:gravity="center"
        android:text="2"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

</androidx.constraintlayout.widget.ConstraintLayout>